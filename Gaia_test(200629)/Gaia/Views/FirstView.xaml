<Grid x:Class="Gaia.Views.FirstView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:control="clr-namespace:Gaia.Controls"
             mc:Ignorable="d" >
    <Grid.RowDefinitions>
        <RowDefinition Height="5*"/>
        <RowDefinition Height="3*"/>
        <RowDefinition Height="1*"/>
    </Grid.RowDefinitions>
    <control:SoilColumn x:Name="soilColumn" Grid.Row="0"/>
    <control:PolygonColorPicker x:Name="polygonColorPicker" Grid.Row="1" Margin="0,10,0,0"/>
    <control:SampleForm x:Name="sampleForm" Grid.Row="2" Margin="0,10,0,0"/>
</Grid>
