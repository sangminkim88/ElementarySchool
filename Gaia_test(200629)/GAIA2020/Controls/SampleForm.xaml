<UserControl x:Class="GAIA2020.Controls.SampleForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" IsEnabledChanged="UserControl_IsEnabledChanged">
    <Border x:Name="border" BorderThickness="0,2,0,2" BorderBrush="Black">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <RadioButton x:Name="sample1" GroupName="sample" Style="{StaticResource sampleRadiobutton}" Grid.Column="0" Height="47" Width="215" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Canvas IsHitTestVisible="True" MouseDown="Canvas_MouseDown" Background="Transparent">
                    <Polygon Points="0,30 57,30, 57,0" Stroke="Black" StrokeThickness="1" Fill="Black" Canvas.Left="11" Canvas.Top="9"/>
                    <Polygon Points="0,0 0,30, 57,0" Stroke="Black" StrokeThickness="1"   Fill="White" Canvas.Left="10" Canvas.Top="9"/>
                    <TextBlock Padding="0" Canvas.Left="76"   Canvas.Top="9" Text="자연 시료 UD" FontSize="14"/>
                    <TextBlock Padding="0" Canvas.Left="76"   Canvas.Top="26" Text="(Undisturbed sample)" FontSize="10"/>
                </Canvas>
            </RadioButton>
            <RadioButton x:Name="sample2" GroupName="sample" Style="{StaticResource sampleRadiobutton}" Grid.Column="1" Height="47" Width="215" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Canvas IsHitTestVisible="True" MouseDown="Canvas_MouseDown" Background="Transparent">
                    <Rectangle Fill="White" Width="57" Height="31" Stroke="Black" Canvas.Left="11" Canvas.Top="9"/>
                    <Line Stroke="Black" StrokeThickness="1" X1="11" X2="68" Y1="9" Y2="40"/>
                    <Line Stroke="Black" StrokeThickness="1" X1="11" X2="68" Y1="40" Y2="9"/>
                    <TextBlock Padding="0" Canvas.Left="76"   Canvas.Top="9" Text="흐트러진 시료 DS" FontSize="14"/>
                    <TextBlock Padding="0" Canvas.Left="76"   Canvas.Top="26" Text="(Disturbed sample)" FontSize="10"/>
                </Canvas>
            </RadioButton>
            <RadioButton x:Name="sample3" GroupName="sample" Style="{StaticResource sampleRadiobutton}" Grid.Column="2" Height="47" Width="215" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Canvas IsHitTestVisible="True" MouseDown="Canvas_MouseDown" Background="Transparent">
                    <Rectangle Fill="White" Width="58" Height="31" Stroke="Black" Canvas.Left="11" Canvas.Top="9"/>
                    <TextBlock Padding="0" Canvas.Left="76"   Canvas.Top="9" Text="흐트러진 시료 NS" FontSize="14"/>
                    <TextBlock Padding="0" Canvas.Left="76"   Canvas.Top="26" Text="(No sample)" FontSize="10"/>
                </Canvas>
            </RadioButton>
            <RadioButton x:Name="sample4" GroupName="sample" Style="{StaticResource sampleRadiobutton}" Grid.Column="3" Height="47" Width="215" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Canvas IsHitTestVisible="True" MouseDown="Canvas_MouseDown" Background="Transparent">
                    <Rectangle  Fill="White" Width="57" Height="31" Stroke="Black" Canvas.Left="11" Canvas.Top="9"/>
                    <Ellipse Width="20" Height="20" Stroke="Black" Canvas.Left="30" Canvas.Top="14" Fill="Black"/>
                    <TextBlock  Padding="0" Canvas.Left="76"   Canvas.Top="9" Text="코아 시료 CS" FontSize="14"/>
                    <TextBlock  Padding="0" Canvas.Left="76"   Canvas.Top="26" Text="(No sample)" FontSize="10"/>
                </Canvas>
            </RadioButton>
        </Grid>
    </Border>
