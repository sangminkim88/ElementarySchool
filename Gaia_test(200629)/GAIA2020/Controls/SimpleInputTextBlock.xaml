<UserControl x:Class="GAIA2020.Controls.SimpleInputTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GAIA2020.Controls"
             x:Name="root"
             mc:Ignorable="d">
    <!--<StackPanel x:Name="panel" Orientation="Horizontal" FocusManager.FocusedElement="{Binding ElementName=watermarkText}">-->
    <StackPanel x:Name="panel" Orientation="Horizontal">
        <TextBlock x:Name="fixedText" MinWidth="20" VerticalAlignment="Center"/>
        <local:WatermarkTextbox x:Name="watermarkText" VerticalAlignment="Center" Background="whitesmoke" BorderThickness="0" FontSize="14"
                                Text="{Binding Data, ElementName=root, UpdateSourceTrigger=PropertyChanged}" Margin="5,0,0,0" Height="22" KeyUp="WatermarkText_KeyUp"/>
        <Button x:Name="button" TextBlock.TextAlignment="Center" Margin="10,0,0,0" Background="{StaticResource Button.Static.Background}" Height="{Binding ActualHeight, ElementName=watermarkText}" 
                BorderThickness="0" Click="buttonClick" Command="{Binding CustomCommand, ElementName=root}" CommandParameter="{Binding CustomCommandParameter, ElementName=root}" FontSize="15"/>
    </StackPanel>
</UserControl>
